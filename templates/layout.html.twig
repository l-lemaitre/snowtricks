<!DOCTYPE html>
<html lang="fr">
	<head>
        {% block head %}
            <!-- Meta -->
            <meta charset="UTF-8" />
            <meta name="description" content="Site collaboratif SnowTricks" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <link href="favicon.ico" rel="icon" type="image/ico" />
            <title>SnowTricks | {% block title %}{% endblock %}</title>
            <!-- Main CSS theme (includes Bootstrap) -->
            {% block stylesheets %}{{ encore_entry_link_tags('app') }}{% endblock %}
            <!-- Custom CSS -->
            <link href="/css/stylesheet.css" rel="stylesheet" type="text/css" />
        {% endblock %}
	</head>
    <body>
        <!-- HEADER -->
        {% block header %}
            <header>
                <div class="navbar navbar-default navbar-static-top" role="navigation">
                    <div class="container">
                        <div class="navbar-header col-md-3 col-lg-2">
                            <a class="navbar-brand" href="{{ path('app_home_page') }}">SnowTricks</a>
                        </div>
                        <div class="navbar-nav text-uppercase flex-row">
                            <li class="nav-item px-2"><a href="{{ path('app_index_page') }}" class="nav-link">Accueil</a></li>
                            <li class="nav-item px-2"><a href="{# { path('app_category') } #}" class="nav-link">Figures</a></li>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li class="nav-item px-2"><a href="{{ path('app_trick_add') }}" class="nav-link">Ajouter une figure</a></li>
                            {% else %}
                                <li class="nav-item px-2"><a href="{{ path('app_login') }}" class="nav-link">Connexion</a></li>
                                <li class="nav-item px-2"><a href="{{ path('app_register') }}" class="nav-link">Inscription</a></li>
                            {% endif %}
                        </div>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <div class="navbar-nav flex-row">
                                    <li class="nav-item text-white">Bonjour, {{ app.user.username }} |</li>
                                    <li class="nav-item ps-1"><a href="{{ path('app_logout') }}" class="nav-link">Déconnexion</a></li>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </header>
        {% endblock %}
		<!-- MAIN CONTENT -->
		<main>
            {% block content %}{% endblock %}
		</main>
        <!-- FOOTER -->
        {% block footer %}
		    <footer class="fixed-bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <p>&copy; {{ 'now'|date('Y') }} - <a href="mailto:contact@llemaitre.com">Ludovic LEMAÎTRE</a>. {{ 'Tous droits réservés'|trans }}</p>
                        </div>
                    </div>
                </div>
            </footer>
        {% endblock %}
        <!-- Bootstrap JS -->
        {% block javascripts %}{{ encore_entry_script_tags('app') }}{% endblock %}
        <!-- Custom JS -->
        <script src="/js/main.js"></script>
    </body>
    {% include "_toasts.html.twig" %}
</html>
