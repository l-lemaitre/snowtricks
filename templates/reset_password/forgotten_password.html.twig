{% extends "layout.html.twig" %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}
{% block content %}
    <div class="container container-identifiers mt-5 d-flex justify-content-center">
        <div class="col-md-4">
            <h3><i class="fa fa-repeat"></i>Réinitialisez votre mot de passe</h3>
            <div class="card px-5 py-5">
                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    <div class="mb-3">
                        <small>
                            Entrez votre nom d'utilisateur et nous vous enverrons un lien pour réinitialiser votre mot de passe.
                        </small>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary">Envoyer</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
